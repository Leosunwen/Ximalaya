<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:background="#F4F4F4"
        android:id="@+id/relative_main"
        android:layout_width="match_parent"
        android:layout_height="49dp" >

        <ImageView
            android:id="@+id/imageview_main"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/title_logo" />

        <Button
            android:id="@+id/button_main_search"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/searchselector" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative_main"
        android:background="#CDCDCD" />

    <FrameLayout
        android:id="@+id/framelayout_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main_comeon"
        android:layout_below="@+id/relative_main" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main_comeon"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:background="#F7F8F9"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_find"
            style="@style/radiobutton_style"
            android:checked="true"
            android:drawableTop="@drawable/main_find"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_main_custom"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/main_custom"
            android:text="定制听" />

        <RadioButton
            android:id="@+id/rb_main_comeon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_main_download"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/main_downloadlistener"
            android:text="下载听" />

        <RadioButton
            android:id="@+id/rb_main_myself"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/main_myself"
            android:text="我" />
    </RadioGroup>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/rg_main_comeon"
        android:background="#CDCDCD" />

    <ImageButton
        android:id="@+id/button_main_comeon"
        android:layout_width="72dp"
        android:scaleType="fitCenter"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_comeon"
        android:src="@drawable/play_icon_new" />

</RelativeLayout>